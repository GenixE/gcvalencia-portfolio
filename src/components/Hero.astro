<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden bg-gradient-to-br from-slate-50 via-purple-50 to-blue-50 dark:from-gray-900 dark:via-purple-900/20 dark:to-blue-900/20">
  <!-- Enhanced animated background mesh with better light mode visibility -->
  <div class="absolute inset-0 opacity-50 dark:opacity-30">
    <div class="absolute inset-0 bg-gradient-to-r from-purple-400/40 via-transparent to-blue-400/40 dark:from-purple-400/20 dark:via-transparent dark:to-blue-400/20 animate-gradient-x"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-pink-400/25 to-transparent dark:from-transparent dark:via-pink-400/10 dark:to-transparent animate-gradient-y"></div>
    <!-- Additional diagonal gradient for more complexity -->
    <div class="absolute inset-0 bg-gradient-to-tr from-indigo-400/20 via-transparent to-rose-400/20 dark:from-indigo-400/10 dark:via-transparent dark:to-rose-400/10 animate-gradient-diagonal"></div>
  </div>

  <!-- Enhanced grid pattern with better light mode contrast -->
  <div class="absolute inset-0 opacity-20 dark:opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(139, 92, 246, 0.5) 1px, transparent 0); background-size: 50px 50px;"></div>
  </div>

  <!-- Additional light mode enhancement: subtle noise texture -->
  <div class="absolute inset-0 opacity-20 dark:opacity-5">
