          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced floating elements for visual interest -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Original floating circles with enhanced styling -->
    <div class="floating-element absolute top-1/4 left-1/4 w-64 h-64 bg-gradient-to-r from-purple-200 to-pink-200 dark:from-purple-900 dark:to-pink-900 rounded-full opacity-30 animate-float blur-sm"></div>
    <div class="floating-element absolute top-3/4 right-1/4 w-32 h-32 bg-gradient-to-r from-blue-200 to-cyan-200 dark:from-blue-900 dark:to-cyan-900 rounded-full opacity-30 animate-float-delayed blur-sm"></div>

    <!-- Additional floating elements -->
    <div class="floating-element absolute top-1/2 right-1/6 w-48 h-48 bg-gradient-to-r from-indigo-200 to-purple-200 dark:from-indigo-900 dark:to-purple-900 rounded-full opacity-20 animate-float-slow blur-md"></div>
    <div class="floating-element absolute top-1/6 right-1/3 w-24 h-24 bg-gradient-to-r from-pink-200 to-rose-200 dark:from-pink-900 dark:to-rose-900 rounded-full opacity-25 animate-float-reverse blur-sm"></div>
    <div class="floating-element absolute bottom-1/4 left-1/6 w-40 h-40 bg-gradient-to-r from-cyan-200 to-blue-200 dark:from-cyan-900 dark:to-blue-900 rounded-full opacity-20 animate-float-delayed-2 blur-md"></div>

    <!-- Small particle-like elements -->
    <div class="absolute top-1/3 left-1/2 w-2 h-2 bg-purple-400 dark:bg-purple-500 rounded-full opacity-60 animate-pulse"></div>
    <div class="absolute top-2/3 left-1/3 w-1 h-1 bg-blue-400 dark:bg-blue-500 rounded-full opacity-70 animate-ping"></div>
    <div class="absolute top-1/5 left-3/4 w-1.5 h-1.5 bg-pink-400 dark:bg-pink-500 rounded-full opacity-50 animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/3 right-1/3 w-2 h-2 bg-indigo-400 dark:bg-indigo-500 rounded-full opacity-60 animate-ping" style="animation-delay: 2s;"></div>

    <!-- Twinkling stars scattered throughout the galaxy -->
    <!-- Large stars -->
    <div class="absolute top-[15%] left-[20%] w-1 h-1 bg-purple-600 dark:bg-yellow-200 rounded-full opacity-80 animate-twinkle"></div>
    <div class="absolute top-[25%] right-[15%] w-1 h-1 bg-blue-600 dark:bg-blue-100 rounded-full opacity-70 animate-twinkle-delayed"></div>
    <div class="absolute top-[45%] left-[10%] w-1 h-1 bg-indigo-600 dark:bg-purple-100 rounded-full opacity-90 animate-twinkle-slow"></div>
    <div class="absolute top-[65%] right-[25%] w-1 h-1 bg-pink-600 dark:bg-pink-100 rounded-full opacity-75 animate-twinkle" style="animation-delay: 1.5s;"></div>
    <div class="absolute top-[80%] left-[30%] w-1 h-1 bg-cyan-600 dark:bg-cyan-100 rounded-full opacity-85 animate-twinkle-delayed" style="animation-delay: 3s;"></div>

    <!-- Medium stars -->
    <div class="absolute top-[10%] left-[60%] w-0.5 h-0.5 bg-amber-600 dark:bg-yellow-100 rounded-full opacity-60 animate-twinkle-fast"></div>
    <div class="absolute top-[30%] left-[75%] w-0.5 h-0.5 bg-blue-500 dark:bg-blue-200 rounded-full opacity-70 animate-twinkle" style="animation-delay: 2s;"></div>
    <div class="absolute top-[50%] left-[85%] w-0.5 h-0.5 bg-purple-500 dark:bg-purple-200 rounded-full opacity-65 animate-twinkle-slow" style="animation-delay: 1s;"></div>
    <div class="absolute top-[70%] right-[10%] w-0.5 h-0.5 bg-pink-500 dark:bg-pink-200 rounded-full opacity-55 animate-twinkle-delayed" style="animation-delay: 4s;"></div>
    <div class="absolute bottom-[15%] right-[45%] w-0.5 h-0.5 bg-indigo-500 dark:bg-indigo-100 rounded-full opacity-80 animate-twinkle-fast" style="animation-delay: 2.5s;"></div>

    <!-- Small distant stars -->
    <div class="absolute top-[12%] left-[45%] w-[1px] h-[1px] bg-amber-500 dark:bg-yellow-50 rounded-full opacity-40 animate-twinkle-subtle"></div>
    <div class="absolute top-[18%] right-[30%] w-[1px] h-[1px] bg-blue-400 dark:bg-blue-50 rounded-full opacity-50 animate-twinkle-subtle" style="animation-delay: 1s;"></div>
    <div class="absolute top-[35%] left-[55%] w-[1px] h-[1px] bg-purple-400 dark:bg-purple-50 rounded-full opacity-45 animate-twinkle-subtle" style="animation-delay: 3s;"></div>
    <div class="absolute top-[55%] right-[40%] w-[1px] h-[1px] bg-pink-400 dark:bg-pink-50 rounded-full opacity-35 animate-twinkle-subtle" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-[25%] left-[70%] w-[1px] h-[1px] bg-cyan-500 dark:bg-cyan-50 rounded-full opacity-60 animate-twinkle-subtle" style="animation-delay: 4s;"></div>
    <div class="absolute bottom-[35%] right-[60%] w-[1px] h-[1px] bg-indigo-400 dark:bg-indigo-50 rounded-full opacity-40 animate-twinkle-subtle" style="animation-delay: 1.5s;"></div>

    <!-- Extra scattered micro stars -->
    <div class="absolute top-[8%] left-[35%] w-[0.5px] h-[0.5px] bg-gray-600 dark:bg-white rounded-full opacity-30 animate-twinkle-micro"></div>
    <div class="absolute top-[22%] left-[80%] w-[0.5px] h-[0.5px] bg-gray-600 dark:bg-white rounded-full opacity-25 animate-twinkle-micro" style="animation-delay: 2s;"></div>
    <div class="absolute top-[40%] right-[20%] w-[0.5px] h-[0.5px] bg-gray-600 dark:bg-white rounded-full opacity-35 animate-twinkle-micro" style="animation-delay: 3s;"></div>
    <div class="absolute bottom-[40%] left-[25%] w-[0.5px] h-[0.5px] bg-gray-600 dark:bg-white rounded-full opacity-20 animate-twinkle-micro" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-[20%] right-[35%] w-[0.5px] h-[0.5px] bg-gray-600 dark:bg-white rounded-full opacity-30 animate-twinkle-micro" style="animation-delay: 4s;"></div>
  </div>
</section>

<style>
  .animate-fade-in-up {
    animation: fadeInUp 1s ease-out;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float 6s ease-in-out infinite 3s;
  }

  .animate-float-delayed-2 {
    animation: float 6s ease-in-out infinite 4s;
  }

  .animate-float-slow {
    animation: float 8s ease-in-out infinite 1s;
  }

  .animate-float-reverse {
    animation: floatReverse 5s ease-in-out infinite 2s;
  }

  .animate-gradient-roll {
    animation: gradientRoll 3s linear infinite;
  }

  .animate-gradient-x {
    animation: gradientX 8s ease infinite;
  }

  .animate-gradient-y {
    animation: gradientY 6s ease infinite;
  }

  .animate-gradient-diagonal {
    animation: gradientDiagonal 8s ease infinite;
  }

  .animate-twinkle {
    animation: twinkle 1.5s infinite;
  }

  .animate-twinkle-fast {
    animation: twinkle 1s infinite;
  }

  .animate-twinkle-delayed {
    animation: twinkle 1.5s infinite 0.75s;
  }

  .animate-twinkle-slow {
    animation: twinkle 2s infinite;
  }

  .animate-twinkle-subtle {
    animation: twinkle 2.5s infinite;
  }

  .animate-twinkle-micro {
    animation: twinkle 3s infinite;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) translateX(0px); }
    25% { transform: translateY(-10px) translateX(5px); }
    50% { transform: translateY(-20px) translateX(0px); }
    75% { transform: translateY(-10px) translateX(-5px); }
  }

  @keyframes floatReverse {
    0%, 100% { transform: translateY(0px) translateX(0px); }
    25% { transform: translateY(10px) translateX(-5px); }
    50% { transform: translateY(20px) translateX(0px); }
    75% { transform: translateY(10px) translateX(5px); }
  }

  @keyframes gradientRoll {
    0% { background-position: 0% 50%; }
    100% { background-position: -200% 50%; }
  }

  @keyframes gradientX {
    0%, 100% { transform: translateX(0%) rotate(0deg); }
    50% { transform: translateX(100%) rotate(180deg); }
  }

  @keyframes gradientY {
    0%, 100% { transform: translateY(0%) rotate(0deg); }
    50% { transform: translateY(100%) rotate(90deg); }
  }

  @keyframes gradientDiagonal {
    0% { background-position: 0% 0%; }
    100% { background-position: 100% 100%; }
  }

  @keyframes twinkle {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }
</style>